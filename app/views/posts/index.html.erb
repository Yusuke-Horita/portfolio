<h1>記事一覧</h1>
<div class="post-box">
	<% @posts.each do |post| %>
		<p><%= link_to post.user.name, user_path(post.user) %></p>
		<%= post.created_at.strftime("%Y/%m/%d %H:%M") %><br>

		<%= link_to post_path(post) do %>
		  <%= attachment_image_tag post, :image, :fill, 400, 300, format: 'jpeg' %>
		<% end %>
		  <h4><%= post.title %></h4>
		  <p><%= post.body %></p>
		  <%= link_to "詳細", post_path(post), class: "btn btn-default" %>
	<% end %>
</div>