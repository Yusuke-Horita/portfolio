<h1>新規投稿</h1>
<% if @post.errors.any? %>
	<% @post.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>
<%= form_for(@post) do |f| %>
	<h4>画像</h4>
	<%= f.attachment_field :image, placeholder: "画像" %>
	<h4>題名</h4>
	<%= f.text_field :title, class: "form-control" %>
	<h4>本文</h4>
	<%= f.text_area :body, class: "form-control" %>
	<%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>