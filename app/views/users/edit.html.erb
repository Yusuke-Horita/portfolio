<h1>ユーザー編集</h1>
<% if @user.errors.any? %>
	<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>
<%= form_for(@user) do |f| %>
	<h4>プロフィール画像</h4>
	<%= f.attachment_field :profile_image, placeholder: "画像" %>
	<h4>名前</h4>
	<%= f.text_field :name %>
	<h4>自己紹介</h4>
	<%= f.text_area :introduction %>
	<%= f.submit "編集", class: "btn btn-success" %>
<% end %>
